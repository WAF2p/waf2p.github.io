source 'https://rubygems.org'

gem 'jekyll', '~> 4.3'
gem "logger"
gem "csv"
gem "base64"
gem "bigdecimal"
gem "tzinfo"
gem "tzinfo-data"
gem "liquid", "~> 4.0"
gem "ostruct"  # Required by jekyll-spaceship for Ruby 4.0+

group :jekyll_plugins do
  gem "jekyll-asciidoc"                # no version known
  gem "jekyll-spaceship"
  gem "jekyll-archives", "~> 2.2"      # latest stable, works with Jekyll 4.x
  gem "jekyll-feed", "~> 0.17"         # updated for Ruby 3.x, avoids tainted? issues
  gem "jekyll-paginate", "~> 1.1"      # legacy pagination, still compatible
  gem "jekyll-seo-tag", "~> 2.8"       # current release, supports Jekyll 4.3
  gem "jekyll-sitemap", "~> 1.4"       # stable, works fine with Jekyll 4.x
end

